<%= render 'shared/errors', obj: @book %>

<div class="bg-white container mx-auto rounded shadow-lg p-6">
  <%= form_for(@book, :html => {role: "form"}) do |f| %>
  <div class="w-3/4 mx-auto my-6">
    <%= f.text_field :title, placeholder: "Book Title", autofocus: true, class:"form-title fancy-font block border border-red-darkest focus:border-red-darkest focus:shadow-lg p-3 rounded shadow w-full" %>
  </div>
  <div class="w-3/4 mx-auto my-6">
    <%= f.text_field :subtitle, placeholder: "Book Subtitle", autofocus: true, class:"form-subtitle fancy-font block border border-red-darkest focus:border-red-darkest focus:shadow-lg p-3 rounded shadow w-full" %>
  </div>
  <div class="flex w-3/4 mx-auto my-6">
    <div class="w-2/3">
      <%= f.text_field :author, placeholder: "Book Author", autofocus: true, class:"form-author fancy-font block border border-red-darkest focus:border-red-darkest focus:shadow-lg p-3 rounded shadow w-full" %>
    </div>
    <div class="category-dropdown text-center w-1/3">
      <%= f.collection_select(:book_category_id, BookCategory.order(:name),:id,:name, {:prompt => 'Category'}, 
      {:class=>'fancy-font border border-red-darkest focus:border-red-darkest focus:shadow-lg p-2 rounded shadow'}) %>
    </div>
    <div class="w-1/3">
      <%= f.text_field :position, placeholder: "Book Position", autofocus: true, class:"form-author fancy-font block border border-red-darkest focus:border-red-darkest focus:shadow-lg p-3 rounded shadow w-full" %>
    </div>
  </div>

  <div class="w-3/4 mx-auto my-6">
    <%= f.text_field :book_link, placeholder: "Book Link", autofocus: true, class:"form-link fancy-font block border border-red-darkest focus:border-red-darkest focus:shadow-lg p-3 rounded shadow w-full" %>
  </div>
  <div class="w-3/4 flex justify-center mx-auto">
    <div class="book-cover w-1/3 shadow py-6 rounded px-2 text-center ">
      <p class="mb-4">Cover Photo</p>
      <%= f.file_field :book_cover%>
    </div>
  </div>
</div>

<%= f.submit class: "py-3 bg-white block border border-green-darker hover:bg-green-darkest hover:text-green-lightest mx-auto my-4 no-underline normal-font rounded shadow-lg text-green-darkest w-48" %>
<% end %>

<div class="py-16 text-center">
<%= link_to "Cancel Request and Return to Reading List", books_path, class: "burgandy fancy-font hover:underline no-underline" %>
</div>
</div>

<% content_for :javascripts do %>
<script src="https://cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
<script>
CKEDITOR.replace('editor1');
</script>
<script type='text/javascript' charset='UTF-8'>
$(document).ready(function () {
$('form[data-remote]').bind('ajax:before', function () {
  for (instance in CKEDITOR.instances) {
    CKEDITOR
      .instances[instance]
      .updateElement();
  }
});
});
</script>
<% end %>
<section class="category-index pb-16">
  <div class="pb-8 pt-16">
    <h1 class="fancy-font text-center burgandy">Article Categories</h1>
    <% @categories.each do |category| %>
      <div class="bg-white flex justify-between container mx-auto py-1 px-4 rounded-lg shadow-lg text-center w-1/2 my-2">
        <div class="flex justify-between w-1/4">
          <%= link_to "#{category.name}", category_path(category), class: "burgandy no-underline text-lg self-center" %>
          <p class="self-center"><%= pluralize(category.articles.count, "article") %></p>
        </div>
        <div class="w-1/2">
          <% if master_logged_in? %>
            <small><%= link_to "Edit", edit_category_path(category), class: "block hover:text-green-darkest mx-auto my-4 no-underline text-green-darker w-48 text-center" %></small>
          <% else %>
            <%= nil %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="py-16 text-center">
      <%= link_to "Return to Articles Listing", articles_path, class: "burgandy fancy-font hover:underline no-underline" %>
    </div>
  </section>
<section class="hero min-h-screen bg-cover bg-center">
    <div class="absolute px-8 py-12 rounded-lg shadow-lg">
        <h1 class="fancy-font text-4xl text-yellow-lightest text-center">Alex Younger</h1>
        <p class="fancy-font py-2 text-yellow-lighter">Web Developer, Marketing Analyst, Economic Analyst, Financier and Much More</p>
    </div>
</section>
<section class="articles-home py-16 bg-grey-lighter">
    <div class="container mx-auto text-center">
        <h1 class="fancy-font burgandy">Development Blog</h1>
        <a href="<%= articles_path %>"
            class="bg-white block border border-red-darker burgandy button hover:text-red-lightest mx-auto my-4 no-underline normal-font py-3 rounded shadow-lg w-48">View All</a>
        <% if @articles.any?
           then %>
        <% @articles.each do |article| %>
        <a href="<%= article_path(article) %>" class="no-underline">
            <div class="teaser bg-white block border border-grey-light mx-auto my-8 py-10 rounded shadow-lg w-3/4">
                <h1 class="fancy-font burgandy"><%= article.title %></h1>
                <p class="leading-normal normal-font p-8 text-black text-lg"><%= truncate(strip_tags(article.description), length: 600) %></p>
                <small class="burgandy">Created by <%= article.user.username if article.user %>
                    <%= time_ago_in_words(article.created_at) %> ago,
                    Last updated: <%= time_ago_in_words(article.updated_at) %> ago
                </small>
                <% if article.categories.any? %>
                <p class="burgandy"> Categories: <%= render article.categories %> </p>
                <% end %>
                
            </div>
        </a>
        <% end %>
        <% end %>
    </div>
</section>
<section class="about-home">

</section>
<section class="bg-center bg-cover hero min-h-screen sm:bg-bottom">
  <div class="home-content js--fadeInLeft absolute align-baseline mx-auto pin-l pin-r md:px-8 md:py-12 w-2/3">
    <h1 class="fancy-font text-5xl text-blue-lightest text-center">Alex Younger</h1>
    <p class="fancy-font py-2 sm:text-blue-lighter text-center text-lg text-yellow-lightest">Web Developer, Investor, Marketing, Entrepreneur</p>
  </div>
</section>

<section class="about-home bg-white py-16 w-full px-4">
  <div class="language-stats mb-8">
    <%= render partial: "partials/language_bar", locals: {languageStats: @languageStats} %>
  </div>
  <div class="flex flex-wrap justify-center text-lg mx-auto lg:w-3/4 home-content js--fadeInLeft">
    <div class="headshot w-full sm:w-1/3">
      <picture>
        <source srcset="<%= image_path("headshot3_700.png.webp") %>" type="image/webp">
        <source srcset="<%= image_path("headshot3_700.png") %>" type="image/png">
        <img src="<%= image_path("headshot3_700.png") %>" class="flex sm:mt-10 mx-auto relative text-center" width="315" alt="alex younger developer marketing about me"/>
      </picture>
    </div>
    <div class="aboutme-description leading-normal normal-font p-8 w-full sm:w-2/3">
      <p class="py-2">I build and maintain websites for an extensive list of small and large companies.</p>
      <p class="py-2">I am currently building a side business called Hazlitt Tech LLC, dealing in data brokering for financial markets and accounting software.</p>
      <p class="py-2">I consult businesses on best practices for Google Ad Campaigns, Analytics, and content marketing techniques.</p>
      <p class="py-2">Check out my latest
        <a href="<%= projects_path %>" class="text-blue hover:text-blue-darkest">projects</a>.</p>
    </div>
  </div>
</section>
<section class="reading-carousel bg-white py-16 shadow-inner">
  <h3 class="text-3xl text-grey-darkest fancy-font w-3/4 px-8 mx-auto">Reading List</h3>
  <div id="reading-carousel">
    <% if @books.any? then %>
      <% @books.each do |book| %>
        <% if (book.covers.attached? || !book.image_address.nil?) %>
          <div class="cover lg:w-1/4 md:w-1/3 sm:w-1/2 text-center my-12 relative">
            <a href="<%= book.book_link %>" target="_blank" rel="nofollow" class="no-underline">
              <% if (book.covers.attached?) %>
                <picture>
                  <source srcset="<%= book.get_webp_attachment %>" type="image/webp" class="mb-3 shadow" alt="<%= book.image_alt %>">
                  <source srcset="<%= book.get_jpeg_attachment %>" type="image/jpg">
                  <img src="<%= book.get_jpeg_attachment %>" class="mb-3 shadow" alt="<%= book.image_alt %>"/>
                </picture>
              <% else %>
                <picture>
                  <source srcset="<%= "#{image_path(book.image_address)}.webp" %>" type="image/webp" class="mb-3 shadow" alt="<%= book.image_alt %>">
                  <source srcset="<%= image_path(book.image_address) %>" type="image/jpg">
                  <img src="<%= image_path(book.image_address) %>" class="mb-3 shadow" alt="<%= book.image_alt %>"/>
                </picture>
              <% end %>
            </a>
            <div class="book-description bg-purple-lightest w-1/2 p-4 rounded-lg mx-auto">
              <p class="fancy-font text-md text-purple-darkest"><%= book.title %></p>
              <p class="normal-font text-sm text-purple-darkest py-2"><%= book.subtitle %></p>
              <p class="normal-font text-sm text-purple-darkest">by
                <%= book.author %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <a href="<%= books_path %>" class="bg-white block border border-blue-darker hover:bg-blue-darkest hover:text-blue-lightest mx-auto text-center no-underline normal-font py-3 rounded shadow-lg text-blue-darkest w-48">
    See More
  </a>

</section>
<section class="watchlist-home py-16 px-4">
  <div class="home-content js--fadeInLeft">
    <h4 class="fancy-font text-grey-darkest text-3xl text-center py-6">Stock Watchlist</h4>
    <p class="py-6 text-center normal-font">I keep a close eye on markets; here's what I'm looking at right now:</p>
    <%= render 'partials/watchlist' %>
  </div>
</section>

<!-- Scroll Reveal -->
<% content_for :javascripts do %>
  <script>
    $(document).ready(function () {
      window.sr = ScrollReveal();
      if ($(window).width() < 768) {
        $('.home-content').removeClass('js--fadeInRight');
        $('.home-content').removeClass('js--fadeInLeft');
      } else {
        sr.reveal('.js--fadeInLeft', {
          origin: 'left',
          distance: '300px',
          easing: 'ease-in-out',
          duration: 800
        });
        sr.reveal('.js--fadeInRight', {
          origin: 'right',
          distance: '300px',
          easing: 'ease-in-out',
          duration: 800
        });
      }

      var slider = tns({
        container: '#reading-carousel',
        items: 1,
        controls: false,
        autoplay: true,
        autoplayButtonOutput: false,
        nav: false,
        mouseDrag: true,
        responsive: {
          640: {
            edgePadding: 20,
            gutter: 20,
            items: 2
          },
          700: {
            gutter: 30
          },
          900: {
            items: 4
          }
        }
      });
    });

    $('.desktop .nav-link')
      .removeClass('burgandy')
      .addClass('text-blue-lightest');
  </script>
<% end %>
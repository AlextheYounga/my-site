<h1 class="fancy-font mb-8 pt-20 text-center text-purple-darker">My Favorite Books & Audio</h1>
<div class="container mx-auto">

    <div class="category-btn block relative no-underline">
        <h2 class="bg-purple-darker block fancy-font hover:bg-purple-darkest w-48 mx-auto p-2 rounded text-center text-white">Category</h2>
    </div>
    <div class="category-menu w-2/5 md:w-1/3 z-50 block max-w-md h-screen rounded-lg pin-t absolute bg-purple-darkest">
        <ul class="relative p-0">
            <li><button id="showall" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Show All</button>
            </li>
            <li><button id="better-living" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Better Living</button></li>
            <li><button id="philosophy"
                    class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Philosophy</button></li>
            <li><button id="peopleskill" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">People Skills</button></li>
            <li><button id="econ" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Economics</button>
            </li>
            <li><button id="history" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">History</button>
            </li>
            <li><button id="finance" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Finance</button>
            </li>
            <li><button id="tech" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Technology</button>
            </li>
            <li><button id="science" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Science</button>
            </li>
            <li><button id="psych" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Psychology</button>
            </li>
            <li><button id="productivity"
                    class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Productivity</button></li>
            <li><button id="autobio"
                    class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Autobiography</button></li>
            <li><button id="pol" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Politics</button></li>
            <li><button id="biz" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Business</button></li>
            <li><button id="misc" class="normal-font w-full max-w-2xl mx-auto block text-center relative text-lg my-4 font-bold text-blue-lightest">Miscellaneous</button>
            </li>
        </ul>
    </div>
</div>

<div class="container mx-auto">
    <div class="covers flex flex-wrap my-8 w-full">
        <% if @books.any?
               then %>
        <% @books.each do |book| %>
        <div class="<%= book.category %> cover lg:w-1/4 md:w-1/3 sm:w-1/2 text-center my-12">
            <a href="<%= book.book_link %>" target="_blank" rel="nofollow" class="no-underline">
                <picture>
                    <source srcset="<%= image_path("#{book.image_address}.webp") %>" type="image/webp" class="mb-3 shadow" alt="<%= book.image_alt %>"> 
                    <source srcset="<%= image_path("#{book.image_address}") %>" type="image/jpg">
                    <img src="<%= image_path("#{book.image_address}") %>" class="mb-3 shadow" alt="<%= book.image_alt %>" />
                </picture>
                <!-- <%= image_tag(book.image_address, :alt => book.image_alt, class: "m-3 shadow") %>                -->
            </a>
            <div class="book-description bg-purple-lightest w-4/5 p-4 rounded-lg mx-auto">
                <p class="fancy-font text-md text-purple-darkest"><%= book.title %></p>
                <p class="normal-font text-sm text-purple-darkest py-2"><%= book.subtitle %></p>
                <p class="normal-font text-sm text-purple-darkest">by <%= book.author %></p>
            </div>
        </div>
        <% end %>
        <% end %>
    </div>
</div>
</div>
<% content_for :javascripts do %>
<script>
    $(document).ready(function () {
        //Menu button on click event
        $('.category-btn').on('click', function () {
            // Toggles a class on the menu button to transform the burger menu into a cross

            // Toggles a class that slides the menu into view on the screen
            $('.category-menu').toggleClass('category-menu--open');
            return false;
        });
        $('button').on('click', function () {
                $('.category-menu').removeClass('category-menu--open');
            });
    });
</script>
<script>
    $(function () {

        $('.category-menu button').click(function () {
            var get_id = this.id;
            var get_current = $('.covers .' + get_id);

            $('.cover').not(get_current).hide(500);
            get_current.show(500);
        });


        $('#showall').click(function () {
            $('.cover').show(500);
        });
    });
</script>
<% end %>